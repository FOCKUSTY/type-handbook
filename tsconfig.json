{
  "compilerOptions": {
    "target": "es2022",
    "module": "node18",
    "moduleResolution": "Node16",
    "rootDir": "./",
    "allowJs": true,
    "importHelpers": true,
    "outDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
