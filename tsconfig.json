{
  "compilerOptions": {
    "target": "es2024",
    "moduleResolution": "node",
    "rootDir": "./",
    "allowJs": true,
    "importHelpers": true,
    "outDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
